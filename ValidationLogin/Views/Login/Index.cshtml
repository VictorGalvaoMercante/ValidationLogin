<div class="container-form">
    <form asp-action="Index" asp-controller="Login" method="post">
        <h2 class="text-center">Login</h2>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input id="password" name="senha" type="password" class="form-control" required>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="mostrarSenha">
            <label class="form-check-label" for="mostrarSenha">
                Mostrar senha
            </label>
        </div>

        <button type="submit" class="btn btn-success w-100">Entrar</button>
    </form>

    <a class="btn btn-secondary w-100 mt-2 text-center" href="/Login/Register">Cadastre-se</a>
</div>



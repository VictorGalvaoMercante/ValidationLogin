        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        max-width: 400px;
        width: 90%;
        z-index: 1;
    }

    .form-label {
        font-weight: bold;
        color: #2e4d3f; /* Verde musgo escuro */
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .btn-success {
        background-color: #2e7d32; /* Verde floresta */
        border-color: #2e7d32;
    }

        .btn-success:hover {
            background-color: #256428;
            border-color: #1e5221;
        }

    .btn-secondary {
        background-color: #607d8b;
        border-color: #607d8b;
    }

        .btn-secondary:hover {
            background-color: #546e7a;
            border-color: #455a64;
        }
</style>


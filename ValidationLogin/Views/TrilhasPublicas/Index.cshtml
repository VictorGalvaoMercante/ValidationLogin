@model IEnumerable<ValidationLogin.Models.Trilha>

@{
    ViewData["Title"] = "Bem-vindo à EcoTrilhas";
}

<!-- Bootstrap CSS necessário já deve estar no layout -->

<div class="container mt-4">

    <!-- Carousel de imagens -->
    <div id="carouselTrilhas" class="carousel slide mb-5 shadow-sm rounded" data-bs-ride="carousel">
        <div class="carousel-inner rounded">
            <div class="carousel-item active">
                <img src="/img/trilha1.jpg" class="d-block w-100" alt="Trilha 1" style="max-height:400px; object-fit:cover;">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Explore a Trilha do Pico</h5>
                    <p>Aventure-se em paisagens incríveis e descubra a natureza.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/trilha2.jpg" class="d-block w-100" alt="Trilha 2" style="max-height:400px; object-fit:cover;">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Trilha da Cachoeira</h5>
                    <p>Relaxe com o som da água e uma paisagem exuberante.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/trilha3.jpg" class="d-block w-100" alt="Trilha 3" style="max-height:400px; object-fit:cover;">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h5>Trilha do Vale Verde</h5>
                    <p>Ideal para famílias e iniciantes, contato direto com a fauna local.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselTrilhas" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselTrilhas" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Próximo</span>
        </button>
    </div>

    <!-- Informações gerais -->
    <section class="mb-5 text-center">
        <h2 class="fw-bold text-success mb-3">Descubra as Trilhas disponíveis para você!</h2>
        <p class="lead text-muted mx-auto" style="max-width: 700px;">
            Na EcoTrilhas, você encontra as melhores rotas para explorar a natureza com segurança e conforto.
            Escolha uma trilha, reserve seu lugar e prepare-se para uma aventura inesquecível!
        </p>
    </section>

    <!-- Cards das trilhas -->
    <section>
        <h3 class="mb-4">Trilhas Disponíveis</h3>
        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">
                Nenhuma trilha disponível no momento. Volte mais tarde!
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var trilha in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="/img/trilha1.jpg" class="card-img-top" alt="@trilha.Nome" style="height: 180px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@trilha.Nome</h5>
                                <p class="card-text text-muted flex-grow-1">
                                    <strong>Localização:</strong> @trilha.Localizacao <br />
                                    <strong>Distância:</strong> @trilha.DistanciaKm km <br />
                                    <strong>Dificuldade:</strong>
                                    <span class="badge
                                            @(trilha.Dificuldade == "Fácil" ? "bg-success" :
                                                                                trilha.Dificuldade == "Médio" ? "bg-warning text-dark" : "bg-danger")">
                                @trilha.Dificuldade
                            </span> <br />
                            <strong>Data da Trilha:</strong> @trilha.Data.ToString("dd/MM/yyyy")
                        </p>
                        <a href="@Url.Action("Reservar", "Trilhas", new { id = trilha.TrilhaId })" class="btn btn-success mt-auto">
                            Reservar Agora
                        </a>
                    </div>
                </div>
            </div>
                        }
            </div>
        }
    </section>

</div>

<!-- Adicione esse script para o Bootstrap funcionar se já não estiver no seu layout -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

@model IEnumerable<ValidationLogin.Models.Trilha>

@{
    ViewData["Title"] = "Trilhas - EcoTrilhas";
}

<div class="container mt-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-success">
            <i class="bi bi-tree-fill"></i> Bem-vindo, Admin!
        </h1>
        <p class="text-muted fs-5">Gerencie suas trilhas: crie, edite e exclua facilmente.</p>
    </div>

    <!-- Botão Nova Trilha -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold text-success">
            <i class="bi bi-map"></i> Trilhas Cadastradas
        </h3>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            <i class="bi bi-plus-circle"></i> Nova Trilha
        </a>
    </div>

    <!-- Lista ou mensagem -->
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm p-4">
            <i class="bi bi-exclamation-circle fs-4"></i>
            <p class="mb-0 mt-2">Nenhuma trilha cadastrada ainda.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-bordered align-middle mb-0">
                <thead class="table-success text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Localizacao)</th>
                        <th>@Html.DisplayNameFor(model => model.DistanciaKm) (Km)</th>
                        <th>@Html.DisplayNameFor(model => model.Dificuldade)</th>
                        <th>@Html.DisplayNameFor(model => model.Data)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Nome</td>
                            <td>@item.Localizacao</td>
                            <td class="text-center">@item.DistanciaKm</td>
                            <td class="text-center">
                                <span class="badge px-3 py-2
                                            @(item.Dificuldade == "Fácil" ? "bg-success" :
                                                                            item.Dificuldade == "Médio" ? "bg-warning text-dark" : "bg-danger")">
                            @item.Dificuldade
                        </span>
                    </td>
                    <td class="text-center">@item.Data.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.TrilhaId" class="btn btn-outline-primary btn-sm" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.TrilhaId" class="btn btn-outline-info btn-sm" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.TrilhaId" class="btn btn-outline-danger btn-sm" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .table thead th {
        vertical-align: middle;
    }

    .table tbody td {
        vertical-align: middle;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>

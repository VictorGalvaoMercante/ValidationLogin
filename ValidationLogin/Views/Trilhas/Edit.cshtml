@model ValidationLogin.Models.Trilha

@{
    ViewData["Title"] = "Editar Trilha";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-success">
            <i class="bi bi-pencil-square"></i> Editar Trilha
        </h1>
        <p class="text-muted">Atualize as informações da trilha e salve as alterações.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 shadow-sm p-4 rounded bg-light">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="TrilhaId" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da trilha" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Localizacao" class="form-label fw-semibold"></label>
                    <input asp-for="Localizacao" class="form-control" placeholder="Digite a localização" />
                    <span asp-validation-for="Localizacao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DistanciaKm" class="form-label fw-semibold"></label>
                    <input asp-for="DistanciaKm" type="number" step="0.1" class="form-control" placeholder="Distância em Km" />
                    <span asp-validation-for="DistanciaKm" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dificuldade" class="form-label fw-semibold"></label>
                    <select asp-for="Dificuldade" class="form-select">
                        <option value="">Selecione...</option>
                        <option value="Fácil">Fácil</option>
                        <option value="Médio">Médio</option>
                        <option value="Difícil">Difícil</option>
                    </select>
                    <span asp-validation-for="Dificuldade" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Data" class="form-label fw-semibold"></label>
                    <input asp-for="Data" type="date" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

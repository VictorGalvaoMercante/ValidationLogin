@model ValidationLogin.Models.Trilha

@{
    ViewData["Title"] = "Nova Trilha - EcoTrilhas";
}

<div class="container mt-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-success">
            <i class="bi bi-plus-circle"></i> Cadastrar Nova Trilha
        </h1>
        <p class="text-muted fs-5">Preencha as informações abaixo para adicionar uma nova trilha.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-semibold"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Trilha da Serra Verde" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Localizacao" class="form-label fw-semibold"></label>
                            <input asp-for="Localizacao" class="form-control" placeholder="Cidade / Região" />
                            <span asp-validation-for="Localizacao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DistanciaKm" class="form-label fw-semibold"></label>
                                <input asp-for="DistanciaKm" type="number" step="0.01" class="form-control" placeholder="Ex: 5.5" />
                                <span asp-validation-for="DistanciaKm" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Dificuldade" class="form-label fw-semibold"></label>
                                <select asp-for="Dificuldade" class="form-select">
                                    <option value="">Selecione</option>
                                    <option value="Fácil">Fácil</option>
                                    <option value="Médio">Médio</option>
                                    <option value="Difícil">Difícil</option>
                                </select>
                                <span asp-validation-for="Dificuldade" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Data" class="form-label fw-semibold"></label>
                            <input asp-for="Data" type="date" class="form-control" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>

                      
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

@model ValidationLogin.Models.Trilha

@{
    ViewData["Title"] = "Adicionar Nova Trilha";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Adicionar Nova Trilha</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-bold"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da trilha" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Localizacao" class="form-label fw-bold"></label>
                    <input asp-for="Localizacao" class="form-control" placeholder="Informe a localização" />
                    <span asp-validation-for="Localizacao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DistanciaKm" class="form-label fw-bold"></label>
                    <input asp-for="DistanciaKm" type="number" step="0.1" class="form-control" placeholder="Distância em Km" />
                    <span asp-validation-for="DistanciaKm" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dificuldade" class="form-label fw-bold"></label>
                    <select asp-for="Dificuldade" class="form-select">
                        <option value="">Selecione a dificuldade</option>
                        <option value="Fácil">Fácil</option>
                        <option value="Moderada">Moderada</option>
                        <option value="Difícil">Difícil</option>
                    </select>
                    <span asp-validation-for="Dificuldade" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Data" class="form-label fw-bold"></label>
                    <input asp-for="Data" type="date" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
